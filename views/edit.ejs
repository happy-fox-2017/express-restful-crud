<!DOCTYPE html>
<html>

<head>
</head>

<body>
  <h4>Edit Memo</h4>
  <form action="/memo/edit/<%= todo.id %>" method="post">
    <input type="text" id="memo" name="memo" value="<%= todo.title %>">
    <label for="memo">Tittle Memo</label>
    <select name="UserId">
                  <% for(let i=0; i<users.length; i++) {%>
                    <% if(users[i].id == todo.User.id) { %>
                      <option value="<%= users[i].id %>" selected><%= users[i].id %></option>
                    <% } else { %>
                      <option value="<%= users[i].id %>"><%= users[i].id %></option>
                      <% } %>
                  <% } %>
                </select>
    <p>
      Complete Data <br>
      <% if(todo.is_complete == true) {%>
        <input type="radio" name="is_complete" id="done" value="true" checked/>
        <label for="done">done</label>
        <input type="radio" name="is_complete" id="notdoneyet" value="false" />
        <label for="notdoneyet">notdoneyet</label>
        <%} else {%>
          <input type="radio" name="is_complete" id="done" value="true" />
          <label for="done">done</label>
          <input type="radio" name="is_complete" id="notdoneyet" value="false" checked/>
          <label for="notdoneyet">notdoneyet</label>
          <% } %>
    </p>
    <br><br>
    <button type="submit">Submit</button>
  </form>
  <br><br>
</body>
</html>
