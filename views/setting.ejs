<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>edit</title>
</head>

<body>
  <h1>Edit</h1>
  <form class="" action="/memos/setting" method="post">
    <input type="checkbox" name="completion" value="" <%= (todo.completion) ? "checked" : "" %> >
    <label for="">Memo</label><input type="text" name="todo" value="<%=todo.title%>">
    <select class="" name="user_id">
        <option value="<%= todo.User.id %>" selected><%= todo.User.name %></option>
        <% users.forEach(user => { %>
          <option value="<%= user.id %>"> <%= user.name %></option>
        <% }) %>
      </select>
    <input type="submit" name="" value="Submit">
  </form>
  <a href="/memos/delete/<%= todo.id %>">
    <button type="button" name="button">Delete</button>
  </a>
</body>

</html>